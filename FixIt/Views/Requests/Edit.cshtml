@model FixIt.Models.RepairRequest

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="mb-4">Редакция на заявка</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="ClientName" class="form-label">Име</label>
            <input asp-for="ClientName" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Phone" class="form-label">Телефон</label>
            <input asp-for="Phone" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Category" class="form-label">Категория</label>
            <input asp-for="Category" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Описание</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Смени снимка (по избор)</label>
            <input type="file" name="NewImageFile" class="form-control" />
        </div>

        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <p>Текуща снимка:</p>
            <img src="@Model.ImagePath" alt="Снимка" width="150" class="rounded border" />
        }

        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Запази промените</button>
        </div>
        
    </form>
</div>
