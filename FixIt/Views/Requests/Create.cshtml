@model FixIt.Models.RepairRequest

<div class="container mt-4">
    <h2>Нова заявка за ремонт</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="mt-3">
        <div class="mb-3">
            <label asp-for="ClientName" class="form-label"></label>
            <input asp-for="ClientName" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Category" class="form-label"></label>
            <input asp-for="Category" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Снимка (по избор)</label>
            <input type="file" name="ImageFile" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Изпрати заявка</button>
    </form>
</div>
