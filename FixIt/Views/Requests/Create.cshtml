@model FixIt.Models.RepairRequest

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h3 class="card-title mb-4 text-primary">
                <i class="bi bi-tools me-2"></i>Нова заявка за ремонт
            </h3>

            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="ClientName" class="form-label fw-semibold">
                        <i class="bi bi-person-fill me-1"></i>Име
                    </label>
                    <input asp-for="ClientName" class="form-control" placeholder="Въведете име" />
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label fw-semibold">
                        <i class="bi bi-telephone-fill me-1"></i>Телефон
                    </label>
                    <input asp-for="Phone" class="form-control" placeholder="Пример: 0888 123 456" />
                </div>

                <div class="mb-3">
                    <label asp-for="Category" class="form-label fw-semibold">
                        <i class="bi bi-wrench-adjustable-circle-fill me-1"></i>Категория
                    </label>
                    <input asp-for="Category" class="form-control" placeholder="Пример: Ел. инсталация, ВиК..." />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold">
                        <i class="bi bi-chat-left-text-fill me-1"></i>Описание
                    </label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Опишете проблема..."></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-image-fill me-1"></i>Снимка (по избор)
                    </label>
                    <input type="file" name="ImageFile" class="form-control" />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-send-fill me-1"></i>Изпрати заявка
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
