@model ErrorViewModel
@{
    ViewData["Title"] = "Възникна грешка";
}

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger shadow-sm p-4">
                <h1 class="display-5 text-danger">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    Упс! Възникна грешка.
                </h1>

                <p class="lead">Съжаляваме, нещо се обърка при обработката на заявката.</p>

                @if (Model.ShowRequestId)
                {
                    <p class="text-muted">
                        <strong>Код на заявката:</strong> <code>@Model.RequestId</code>
                    </p>
                }

                <hr />
                <p class="mb-1"><strong>Съвет:</strong> Ако си разработчик, активирай <code>Development</code> среда за повече информация.</p>
                <p class="small text-muted">
                    Това може да се направи чрез промяна на променливата на средата:
                    <code>ASPNETCORE_ENVIRONMENT=Development</code>
                </p>
            </div>

            <a class="btn btn-outline-primary mt-3" asp-controller="Home" asp-action="Index">Обратно към началната страница</a>
        </div>
    </div>
</div>
